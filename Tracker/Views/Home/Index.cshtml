@section scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="page-header">
    <h1>TrackService</h1>
</div>

<div class="row">

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Pets</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: pets">
                    <li>
                        <strong><span data-bind="text: Id"></span></strong>: <span data-bind="text: Name"></span>
                        <small><a href="#">Details</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

    <div class="col-md-4">
        <!-- TODO: Book details -->
    </div>

    <div class="col-md-4" style="width:50%">
        <div class=" col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Add Pet</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addPet">

                    <div class="form-group" data-bind="with: newPet">

                        <label for="inputID" class="col-sm-2 control-label">Id</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="inputID" data-bind="value:Id" />
                        </div>

                        <label for="inputName" class="col-sm-2 control-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputName" data-bind="value:Name" />
                        </div>

                        <label for="inputDateOfBirth" class="col-sm-2 control-label">DateOfBirth</label>
                        <div class="col-sm-10">
                            <input type="date" class="form-control" id="inputGenre" data-bind="value:DateOfBirth" />
                        </div>

                        <label for="inputOwner" class="col-sm-2 control-label">Owner</label>
                        <div class="col-sm-10">
                            <select data-bind="options:Owner, optionsText: 'Name', value: newPet.Owner"></select>
                            <asp:DropDownList ID="ddlOwner" runat="server" AutoPostBack="True"
                                              AppendDataBoundItems="true"
                                              CausesValidation="True" DataSourceID="SqlDataSource1"
                                              DataTextField="OwnerLastName" DataValueField="OwnerId"
                                              onselectedindexchanged="ddlPetOwners_SelectedIndexChanged" ForeColor="Blue"
                                              Height="22px" Width="153px">
                                <asp:listitem text="Select" value="0" />
                            </asp:DropDownList>
                            <asp:SqlDataSource ID="SqlDataSource1" runat="server"
                                               ConnectionString="<%$ ConnectionStrings:TrackerContext %>"
                                               SelectCommand="SELECT [LastName], [Id] FROM [PetOwners]">
                            </asp:SqlDataSource>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>
    </div>
</div>
